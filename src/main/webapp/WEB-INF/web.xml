<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
    <servlet-name>simple-servlet</servlet-name>
    <servlet-class>fr.alexis.java_servlet.controller.Servlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>servlet-parameter</servlet-name>
    <servlet-class>fr.alexis.java_servlet.controller.ParameterServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>simple-servlet</servlet-name>
    <url-pattern>/simple</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>servlet-parameter</servlet-name>
    <url-pattern>/parameter</url-pattern>
  </servlet-mapping>
</web-app>
